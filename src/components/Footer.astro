---
import { SOCIAL_LINKS, NAV_LINKS, SITE } from '@/consts'
import SocialIcons from './SocialIcons.astro'
import Link from '@/components/Link.astro'
import { Icon } from 'astro-icon/components'

const isExternalLink = (href: string) => {
  return href.startsWith('http')
}
---

<footer class="bg-background/80 border-t border-border/50 backdrop-blur-md">
  <div class="w-full px-4 py-8 sm:py-10">
    <div class="flex flex-col gap-8 max-w-3xl mx-auto">
      <!-- Main Footer Content -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <!-- Projekt -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Gradify</h4>
          <p class="text-xs text-muted-foreground leading-relaxed">
            Web-basiertes Notenverwaltungssystem f√ºr Hochschulen. Entwickelt im Rahmen des Moduls Web-basierte Anwendungssysteme.
          </p>
        </div>

        <!-- Navigation -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Navigation</h4>
          <nav class="flex flex-col gap-2">
            {NAV_LINKS.map((item) => (
              <Link 
                href={item.href} 
                class="text-sm text-muted-foreground hover:text-primary capitalize transition-colors"
              >
                {item.label}
              </Link>
            ))}
          </nav>
        </div>

        <!-- Connect -->
        <div>
          <h4 class="text-sm font-semibold mb-3 text-foreground">Links</h4>
          <SocialIcons links={SOCIAL_LINKS} />
          <Link href="/rss.xml" class="mt-2 inline-flex items-center gap-1.5 text-sm text-muted-foreground hover:text-primary transition-colors focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 rounded" aria-label="RSS-Feed abonnieren">
            RSS-Feed
          </Link>
        </div>
      </div>

      <!-- Separator -->
      <div class="h-px bg-border/60" aria-hidden="true"></div>

      <!-- Bottom Section -->
      <div class="flex flex-col items-center gap-2 sm:flex-row sm:justify-between text-sm text-muted-foreground">
        <div class="text-center sm:text-left">
          &copy; {new Date().getFullYear()} {SITE.title} | Frankfurt UAS
        </div>
        <div class="text-xs text-muted-foreground/80">
          <span>Frankfurt UAS | WiSe 2025/26</span>
        </div>
      </div>
    </div>
  </div>
</footer>
